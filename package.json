{
  "name": "copilot-desktop",
  "version": "0.0.4",
  "description": "Unofficial GUI for GitHub's Copilot, made in Electron.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux --x64",
    "dist:mac": "electron-builder --mac --x64 --arm64"
  },
  "dependencies": {
    "electron": "^30.0.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron-builder": "^24.14.1"
  },
  "build": {
    "appId": "au.benjithatfoxguy.copilotdesktop",
    "productName": "Copilot Desktop",
    "copyright": "Copyright Â© 2025 BenjiThatFoxGuy",
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src"
    },
    "win": {
      "icon": "src/icon.ico",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "src/icon.ico",
      "target": ["dmg", "zip"]
    },
    "linux": {
      "icon": "src/icon.ico",
      "target": ["AppImage", "deb", "zip"]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
