{
  "name": "copilot-desktop",
  "version": "0.0.1",
  "description": "Unofficial GUI for GitHub's Copilot, made in Electron.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "package:win": "electron-packager . Copilot-Desktop --platform=win32 --arch=x64 --icon=src/icon.ico --out=dist --overwrite",
    "package:linux": "electron-packager . Copilot-Desktop --platform=linux --arch=x64 --icon=src/icon.ico --out=dist --overwrite",
    "package:mac:x64": "electron-packager . Copilot-Desktop --platform=darwin --arch=x64 --icon=src/icon.ico --out=dist --overwrite",
    "package:mac:arm64": "electron-packager . Copilot-Desktop --platform=darwin --arch=arm64 --icon=src/icon.ico --out=dist --overwrite"
  },
  "dependencies": {
    "electron": "^30.0.0"
  }
}
